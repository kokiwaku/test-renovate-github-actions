{
    "extends": [
        "config:recommended"
    ],
    "branchPrefix": "test-renovate/",
    "username": "renovate-release",
    "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
    "timezone": "Asia/Tokyo",
    "onboarding": false,
    "platform": "github",
    "repositories": [
        "kokiwaku/test-renovate-github-actions"
    ],
    "schedule": ["after 10pm and before 5am every weekday", "every weekend"]
    "prHourlyLimit": 0,
    "packageRules": [
        {
            "description": "composer.json",
            "matchFileNames": [
                "src/composer.json"
            ],
            "matchUpdateTypes": ["minor", "patch"],
            "groupName": "composer.json (non-major)"
        },
        {
            "description": "package.json",
            "matchFileNames": [
                "src/package.json"
            ],
            "matchUpdateTypes": ["minor", "patch"],
            "groupName": "package.json (non-major)"
        }
    ]
}
